{
    "compilerOptions": {
        "lib": ["es5", "es6", "dom"],
        "module": "commonjs",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "pretty": true,
        "sourceMap": true,
        "target": "es6",
        "outDir": "./dist",
        "rootDir": "./src",
        "baseUrl": "./src"
    },
    "include": ["src/**/*.ts", "src/**/*.json", "./src/**/*.json"],
    "exclude": ["node_modules"]
}
